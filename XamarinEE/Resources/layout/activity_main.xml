<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B7C7FE">
    <LinearLayout
        android:orientation="vertical"
        android:background="#C4ABFF"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="104.0dp"
        android:id="@+id/linearLayout1"
        android:layout_marginBottom="44.0dp"
        android:layout_marginTop="120.5dp"
        android:layout_marginLeft="0.0dp">
        <TextView
            android:text="Battery Level:"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="44.5dp"
            android:minWidth="25px"
            android:minHeight="25px"
            android:gravity="center"
            android:id="@+id/textView1" />
        <TextView
            android:text="100%"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="29.5dp"
            android:gravity="center"
            android:id="@+id/textView2" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="#9E9BE8"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="126.5dp"
        android:id="@+id/linearLayout2">
        <TextView
            android:text="State:"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" />
        <TextView
            android:text=""
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" />
        <TextView
            android:text=""
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" />
    </LinearLayout>
    <TextView
        android:text="Device info: "
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6" />

</LinearLayout>